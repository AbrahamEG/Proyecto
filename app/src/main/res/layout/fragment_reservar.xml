<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Reservar" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Establecimiento:"
        android:layout_marginTop="10dp"
        android:layout_marginStart="120dp"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/sEstablecimiento"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <android.support.design.widget.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp" >

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/RCorreo"
                            android:layout_width="340dp"
                            android:layout_height="40dp"
                            android:hint="Correo:" />
                    </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputEditText
                        android:id="@+id/RTel"
                        android:layout_width="340dp"
                        android:layout_height="40dp"
                        android:hint="Telefono:" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputEditText
                    android:id="@+id/RApm"
                    android:layout_width="340dp"
                    android:layout_height="40dp"
                    android:hint="Apellido Materno:" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputEditText
                android:id="@+id/RApp"
                android:layout_width="340dp"
                android:layout_height="40dp"
                android:hint="Apellido Paterno:" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputEditText
            android:id="@+id/Rnom"
            android:layout_width="340dp"
            android:layout_height="40dp"
            android:hint="Nombre:" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/RFecha"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese fecha"
        android:inputType="date"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/RHora"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="Ingrese hora"
        android:inputType="time"
        android:textAlignment="center"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="10dp"
        android:text="Mesa para:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/sMesas"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="10dp"
        android:textAlignment="center" />

    <Button
        android:id="@+id/btnReserva"
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:text="Reservar" />

</LinearLayout>